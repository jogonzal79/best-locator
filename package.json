{
  "name": "bestlocator",
  "version": "2.0.0",
  "type": "module",
  "description": "Universal CSS selector generator for UI testing with AI-powered smart selection. Supports Playwright, Selenium, Cypress with local Ollama integration.",
  "main": "dist/cli/index.js",
  "bin": {
    "bestlocator": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "node dist/cli/index.js",
    "gui": "electron src/gui/main.cjs",
    "gui-dev": "cross-env NODE_ENV=development electron src/gui/main.cjs",
    "build": "tsc",
    "build-gui": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli/index.js",
    "clean": "rimraf dist",
    "postinstall": "echo 'ðŸŽ‰ Best-Locator installed! Run: bestlocator hello'"
  },
  "keywords": [
    "testing",
    "automation",
    "selectors",
    "playwright",
    "selenium",
    "cypress",
    "ai",
    "ollama",
    "ui-testing",
    "web-testing",
    "selector-generator"
  ],
  "author": "Jonathan Gonzalez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jogonzal79/best-locator.git"
  },
  "bugs": {
    "url": "https://github.com/jogonzal79/best-locator/issues"
  },
  "homepage": "https://github.com/jogonzal79/best-locator#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "playwright": ">=1.40.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "build": {
    "appId": "com.bestlocator.app",
    "productName": "Best-Locator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
