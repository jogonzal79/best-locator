{
  "name": "bestlocator",
  "version": "2.2.12",
  "type": "module",
  "description": "Universal AI-powered selector generator for UI testing with organic navigation and intelligent analysis.",
  "main": "dist/index.js",
  "bin": {
    "bestlocator": "dist/index.js"
  },
  "scripts": {
    "dev": "node dist/index.js",
    "gui": "electron src/gui/main.cjs",
    "gui-dev": "cross-env NODE_ENV=development electron src/gui/main.cjs",
    "build": "tsc && cpr src/injected-scripts dist/injected-scripts -o && cpr src/mobile-ui dist/mobile-ui -o",
    "build-gui": "electron-builder",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "postinstall": "echo 'ðŸŽ‰ Best-Locator installed! Run: bestlocator hello'"
  },
  "keywords": [
    "testing",
    "automation",
    "selectors",
    "playwright",
    "selenium",
    "cypress",
    "ai",
    "ollama"
  ],
  "author": "Jonathan Gonzalez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jogonzal79/best-locator.git"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "open": "^10.2.0",
    "playwright": ">=1.40.0",
    "sharp": "^0.34.3",
    "webdriverio": "^9.18.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "cpr": "^3.0.1",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
