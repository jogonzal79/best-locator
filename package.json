{
  "name": "bestlocator",
  "version": "1.1.1",
  "type": "module",
  "description": "Universal selector generator for UI testing",
  "main": "src/gui/main.cjs",
  "bin": {
    "bestlocator": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "node dist/cli/index.js",
    "gui": "electron src/gui/main.cjs",
    "gui-dev": "cross-env NODE_ENV=development electron src/gui/main.cjs",
    "build": "tsc",
    "build-gui": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "testing",
    "automation",
    "selectors",
    "playwright",
    "selenium",
    "cypress"
  ],
  "author": "Jonathan Gonzalez",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "playwright": "^1.54.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.bestlocator.app",
    "productName": "Best-Locator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "files": [
    "dist/**/*",
    "src/gui/**/*",
    "src/core/**/*",
    "package.json",
    "README.md"
  ]
}
